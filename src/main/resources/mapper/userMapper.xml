<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.kanatales_deckmaker.user.repository.UserRepository">
    <insert id="join" parameterType="com.example.kanatales_deckmaker.user.domain.User">
        INSERT INTO
            user
            (
                username,
                nickname,
                password,
                role,
                createDate
            )
        VALUES(
                #{username},
                #{nickname},
                #{password},
                #{role},
                NOW()
            )
    </insert>


    <select id="findByUsername" parameterType="String">
        SELECT
            id,
            username,
            nickname,
            password,
            role,
            createDate
        FROM
            user
        WHERE
            username = #{username}
    </select>


</mapper>
